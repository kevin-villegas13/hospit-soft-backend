# Database
POSTGRES_USER=           # El nombre del usuario de la base de datos (ej: username)
POSTGRES_PASSWORD=       # La contraseña del usuario de la base de datos (ej: password)
POSTGRES_DB=             # El nombre de tu base de datos (ej: my_database)
POSTGRES_PORT=           # El puerto en que corre Postgres (ej: 5432 o 5433 si está mapeado)
POSTGRES_HOST=           # El host de la base de datos (generalmente localhost o la IP del servidor)

# Connection string
DATABASE_URL=            # La cadena completa para conectar con GORM, ej:
                         # host=localhost user=username password=password dbname=my_database port=5432 sslmode=disable

# JWT settings
JWT_SECRET=              # Clave secreta para firmar los access tokens (usa una cadena larga y aleatoria)
JWT_REFRESH_SECRET=      # Clave secreta separada para los refresh tokens (también larga y aleatoria)
JWT_EXPIRATION=          # Tiempo de expiración del access token (ej: 1h para 1 hora)
JWT_REFRESH_EXPIRATION=  # Tiempo de expiración del refresh token (ej: 7d para 7 días)
